<section id="contact" class="w-full px-[8px] md:px-[14.4px]">
  <div class="relative w-full mx-auto min-h-[773px] rounded-[18px] overflow-hidden">
    <!-- Background Image -->
    <img src="/images/footer-mobile.png" alt="" class="md:hidden absolute inset-0 w-full h-full object-cover rounded-[18px]" />
    <img src="/images/footer.png" alt="" class="hidden md:block absolute inset-0 w-full h-full object-cover rounded-[18px]" />

    <!-- Main Content Area -->
    <div class="relative z-10 pt-8">
      <!-- Form and Text Content -->
      <div class="max-w-[1380px] mx-auto px-4 md:px-8">
        <div class="flex flex-wrap lg:flex-nowrap items-start justify-between gap-8">
          <!-- Left Column - Text Content -->
          <div class="w-full lg:w-auto lg:max-w-[575px] flex flex-col pb-5 px-5">
            <div>
              <h2 class="font-funnel font-medium text-offwhite text-[43.3px] md:text-[72.3px] leading-[48px] md:leading-[80px] tracking-[-0.96px] md:tracking-[-1.6px]">
                Let's connect.
              </h2>
            </div>
            <div class="pt-9 md:pt-[201px] flex flex-col gap-5">
              <p class="font-inter font-medium text-offwhite text-[17px] md:text-[19.1px] leading-[28px] md:leading-[30px]">
                At Qtree Holdings, deals are done quickly and seamlessly. Have an opportunity that you think we should look at? Interested in working with us or one of our portfolio companies? We'd love to hear from you.
              </p>
              <div class="flex flex-wrap items-center gap-2">
                <a href="mailto:info@q-tree.com" class="inline-block bg-offwhite text-navy font-funnel font-medium text-sm leading-[14px] lowercase rounded-[4px] px-2 py-1.5 hover:bg-white transition-colors">
                  info@q-tree.com
                </a>
                <a href="tel:+97431622541" class="hidden md:inline-block bg-offwhite text-navy font-funnel font-medium text-sm leading-[14px] lowercase rounded-[4px] px-2 py-1.5 hover:bg-white transition-colors">
                  +974 3162 2541
                </a>
              </div>
            </div>
          </div>

          <!-- Right Column - Form -->
          <div class="w-full lg:w-auto lg:max-w-[690px] lg:flex-1 pb-5">
            <form id="contactForm" class="flex flex-col w-full px-5">
              <!-- Row 1: First & Last Name -->
              <div class="flex flex-col md:flex-row gap-0">
                <div class="flex-1 pb-5 px-0 md:px-5">
                  <input type="text" name="firstName" placeholder="First name*" required class="w-full h-[50px] md:h-[62.72px] border border-offwhite rounded-[4px] bg-transparent px-3.5 py-[14.5px] md:py-[18px] text-offwhite font-inter-tight font-medium text-[14px] md:text-[17.6px] placeholder:text-offwhite/70 focus:outline-none focus:border-white transition-colors" />
                </div>
                <div class="flex-1 pb-5 px-0 md:px-5">
                  <input type="text" name="lastName" placeholder="Last name*" required class="w-full h-[50px] md:h-[62.72px] border border-offwhite rounded-[4px] bg-transparent px-3.5 py-[14.5px] md:py-[18px] text-offwhite font-inter-tight font-medium text-[14px] md:text-[17.3px] placeholder:text-offwhite/70 focus:outline-none focus:border-white transition-colors" />
                </div>
              </div>

              <!-- Row 2: Phone & Email -->
              <div class="flex flex-col md:flex-row gap-0">
                <div class="flex-1 pb-5 px-0 md:px-5">
                  <input type="tel" name="phone" placeholder="Phone*" required class="w-full h-[50px] md:h-[62.72px] border border-offwhite rounded-[4px] bg-transparent px-3.5 py-[14.5px] md:py-[18px] text-offwhite font-inter-tight font-medium text-[14px] md:text-[17.2px] placeholder:text-offwhite/70 focus:outline-none focus:border-white transition-colors" />
                </div>
                <div class="flex-1 pb-5 px-0 md:px-5">
                  <input type="email" name="email" placeholder="Email*" required class="w-full h-[50px] md:h-[62.72px] border border-offwhite rounded-[4px] bg-transparent px-3.5 py-[14.5px] md:py-[18px] text-offwhite font-inter-tight font-medium text-[14px] md:text-[17.9px] placeholder:text-offwhite/70 focus:outline-none focus:border-white transition-colors" />
                </div>
              </div>

              <!-- Row 3: Company Name & Website -->
              <div class="flex flex-col md:flex-row gap-0">
                <div class="flex-1 pb-5 px-0 md:px-5">
                  <input type="text" name="companyName" placeholder="Company name*" required class="w-full h-[50px] md:h-[62.72px] border border-offwhite rounded-[4px] bg-transparent px-3.5 py-[14.5px] md:py-[18px] text-offwhite font-inter-tight font-medium text-[14px] md:text-[17.2px] placeholder:text-offwhite/70 focus:outline-none focus:border-white transition-colors" />
                </div>
                <div class="flex-1 pb-5 px-0 md:px-5">
                  <input type="url" name="website" placeholder="Website" class="w-full h-[50px] md:h-[62.72px] border border-offwhite rounded-[4px] bg-transparent px-3.5 py-[14.5px] md:py-[18px] text-offwhite font-inter-tight font-medium text-[14px] md:text-[17.3px] placeholder:text-offwhite/70 focus:outline-none focus:border-white transition-colors" />
                </div>
              </div>

              <!-- Row 4: Comment -->
              <div class="pb-5 px-0 md:px-5">
                <textarea name="comment" placeholder="Comment" rows="4" class="w-full min-h-[172px] md:min-h-[116px] border border-offwhite rounded-[4px] bg-transparent px-3.5 pt-3 text-offwhite font-inter-tight font-medium text-[14px] md:text-[17.6px] placeholder:text-offwhite/70 focus:outline-none focus:border-white resize-none transition-colors"></textarea>
              </div>

              <!-- Submit Button -->
              <div class="px-0 md:px-5">
                <button type="submit" class="w-full bg-offwhite text-navy font-inter font-medium text-[15.8px] md:text-[19.7px] leading-[16px] md:leading-[20px] text-center py-[17px] md:py-[21px] px-[33px] md:px-10 rounded-[4px] min-w-[160px] md:min-w-[200px] hover:bg-white transition-colors cursor-pointer disabled:opacity-50 disabled:cursor-not-allowed">
                  Submit
                </button>
              </div>

              <!-- Social Icons - 32.37px below submit -->
              <div class="hidden md:flex items-center justify-end gap-4 mt-[32.37px] px-0 md:px-5">
                <a href="#" class="w-5 h-5 flex items-center justify-center opacity-80 hover:opacity-100 transition-opacity" aria-label="LinkedIn">
                  <img src="/images/social-linkedin.svg" alt="" class="w-5 h-5" />
                </a>
                <a href="#" class="w-5 h-5 flex items-center justify-center opacity-80 hover:opacity-100 transition-opacity" aria-label="Instagram">
                  <img src="/images/social-facebook.svg" alt="" class="w-5 h-5" />
                </a>
                <a href="#" class="w-5 h-5 flex items-center justify-center opacity-80 hover:opacity-100 transition-opacity" aria-label="Facebook">
                  <img src="/images/social-twitter.svg" alt="" class="w-5 h-5" />
                </a>
                <a href="#" class="w-5 h-5 flex items-center justify-center opacity-80 hover:opacity-100 transition-opacity" aria-label="X">
                  <img src="/images/social-icon-4.svg" alt="" class="w-5 h-5" />
                </a>
                <a href="#" class="w-5 h-5 flex items-center justify-center opacity-80 hover:opacity-100 transition-opacity" aria-label="YouTube">
                  <img src="/images/social-icon-5.svg" alt="" class="w-5 h-5" />
                </a>
              </div>
            </form>
          </div>
        </div>
      </div>

      <!-- Footer Area -->
      <div class="relative z-10 max-w-[1340px] mx-auto px-4 md:px-8 mt-12 lg:mt-16 pb-8">
        <div class="flex flex-col gap-5">
          <!-- Logo Row -->
          <div class="flex flex-col md:flex-row items-start md:items-center justify-between gap-8">
            <img src="/images/logo-footer.svg" alt="QTree Holding" class="h-[43px] md:h-[120px] lg:h-[170px] w-auto" />
          </div>

          <!-- Mobile Social Icons -->
          <div class="flex md:hidden items-center gap-4">
            <a href="#" class="w-5 h-5 flex items-center justify-center opacity-80 hover:opacity-100 transition-opacity" aria-label="LinkedIn">
              <img src="/images/social-linkedin.svg" alt="" class="w-5 h-5" />
            </a>
            <a href="#" class="w-5 h-5 flex items-center justify-center opacity-80 hover:opacity-100 transition-opacity" aria-label="Instagram">
              <img src="/images/social-facebook.svg" alt="" class="w-5 h-5" />
            </a>
            <a href="#" class="w-5 h-5 flex items-center justify-center opacity-80 hover:opacity-100 transition-opacity" aria-label="Facebook">
              <img src="/images/social-twitter.svg" alt="" class="w-5 h-5" />
            </a>
            <a href="#" class="w-5 h-5 flex items-center justify-center opacity-80 hover:opacity-100 transition-opacity" aria-label="X">
              <img src="/images/social-icon-4.svg" alt="" class="w-5 h-5" />
            </a>
            <a href="#" class="w-5 h-5 flex items-center justify-center opacity-80 hover:opacity-100 transition-opacity" aria-label="YouTube">
              <img src="/images/social-icon-5.svg" alt="" class="w-5 h-5" />
            </a>
          </div>

          <!-- Links + Copyright (reversed order on mobile: links first, copyright below) -->
          <div class="flex flex-col-reverse md:flex-row items-start md:items-center justify-between gap-4">
            <span class="font-inter-tight font-normal text-white text-sm leading-5 capitalize">
              Â© 2026 QTree Holding LLC. All rights reserved.
            </span>
            <nav class="flex flex-wrap items-center gap-3 md:gap-0">
              <a href="/cookie-policy" class="font-inter-tight font-medium text-white text-base leading-5 capitalize md:pr-3 hover:opacity-80 transition-opacity">Cookie Policy</a>
              <a href="/terms-of-usage" class="font-inter-tight font-medium text-white text-base leading-5 capitalize md:px-3 hover:opacity-80 transition-opacity">Terms of Usage</a>
              <a href="/privacy-policy" class="font-inter-tight font-medium text-white text-base leading-5 capitalize md:pl-3 hover:opacity-80 transition-opacity">Privacy Policy</a>
            </nav>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Success Modal -->
  <div id="successModal" class="fixed inset-0 z-50 hidden items-center justify-center px-4" style="background-color: rgba(11, 31, 65, 0.8);">
    <div class="bg-white rounded-lg shadow-2xl max-w-md w-full p-8 transform transition-all scale-95 opacity-0" id="successModalContent">
      <div class="text-center">
        <!-- Success Icon -->
        <div class="mx-auto flex items-center justify-center h-16 w-16 rounded-full bg-green-100 mb-4">
          <svg class="h-8 w-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
        </div>
        
        <!-- Title -->
        <h3 class="text-2xl font-funnel font-medium text-navy mb-3">
          Thank You!
        </h3>
        
        <!-- Message -->
        <p class="text-base font-inter-tight text-navy/80 mb-6">
          Your message has been sent successfully. We'll get back to you soon at the email address you provided.
        </p>
        
        <!-- Close Button -->
        <button 
          id="closeSuccessBtn"
          class="w-full bg-navy text-white font-inter-tight font-medium text-base py-3 px-6 rounded-[4px] hover:bg-navy/90 transition-colors">
          Close
        </button>
      </div>
    </div>
  </div>

  <!-- Error Modal -->
  <div id="errorModal" class="fixed inset-0 z-50 hidden items-center justify-center px-4" style="background-color: rgba(11, 31, 65, 0.8);">
    <div class="bg-white rounded-lg shadow-2xl max-w-md w-full p-8 transform transition-all scale-95 opacity-0" id="errorModalContent">
      <div class="text-center">
        <!-- Error Icon -->
        <div class="mx-auto flex items-center justify-center h-16 w-16 rounded-full bg-red-100 mb-4">
          <svg class="h-8 w-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </div>
        
        <!-- Title -->
        <h3 class="text-2xl font-funnel font-medium text-navy mb-3">
          Oops!
        </h3>
        
        <!-- Message -->
        <p class="text-base font-inter-tight text-navy/80 mb-2" id="errorMessage">
          There was an error submitting your form.
        </p>
        <p class="text-sm font-inter-tight text-navy/60 mb-6">
          Please try again or email us directly at <a href="mailto:info@q-tree.com" class="text-blue-600 hover:underline">info@q-tree.com</a>
        </p>
        
        <!-- Close Button -->
        <button 
          id="closeErrorBtn"
          class="w-full bg-navy text-white font-inter-tight font-medium text-base py-3 px-6 rounded-[4px] hover:bg-navy/90 transition-colors">
          Close
        </button>
      </div>
    </div>
  </div>
</section>

<style>
  #successModal.show,
  #errorModal.show {
    display: flex !important;
  }
  
  #successModal.show #successModalContent,
  #errorModal.show #errorModalContent {
    animation: modalFadeIn 0.3s ease-out forwards;
  }
  
  @keyframes modalFadeIn {
    to {
      transform: scale(1);
      opacity: 1;
    }
  }
</style>

<script>
  // Modal functions
  function showSuccessModal() {
    const modal = document.getElementById('successModal');
    if (modal) {
      modal.classList.add('show');
    }
  }

  function closeSuccessModal() {
    const modal = document.getElementById('successModal');
    if (modal) {
      modal.classList.remove('show');
    }
  }

  function showErrorModal(message) {
    const modal = document.getElementById('errorModal');
    const messageEl = document.getElementById('errorMessage');
    if (modal) {
      if (message && messageEl) {
        messageEl.textContent = message;
      }
      modal.classList.add('show');
    }
  }

  function closeErrorModal() {
    const modal = document.getElementById('errorModal');
    if (modal) {
      modal.classList.remove('show');
    }
  }

  document.addEventListener('DOMContentLoaded', () => {
    const form = document.getElementById('contactForm');
    
    // Close button handlers
    document.getElementById('closeSuccessBtn')?.addEventListener('click', closeSuccessModal);
    document.getElementById('closeErrorBtn')?.addEventListener('click', closeErrorModal);
    
    // Close on background click
    document.getElementById('successModal')?.addEventListener('click', (e) => {
      if (e.target.id === 'successModal') closeSuccessModal();
    });
    document.getElementById('errorModal')?.addEventListener('click', (e) => {
      if (e.target.id === 'errorModal') closeErrorModal();
    });
    
    if (form) {
      form.addEventListener('submit', async (e) => {
        e.preventDefault();
        
        const formData = new FormData(form);
        
        // Validate required fields
        if (!formData.get('firstName') || !formData.get('lastName') || !formData.get('phone') || !formData.get('email') || !formData.get('companyName')) {
          showErrorModal('Please fill in all required fields marked with *');
          return;
        }
        
        const submitButton = form.querySelector('button[type="submit"]');
        const originalText = submitButton.textContent;
        submitButton.textContent = 'Sending...';
        submitButton.disabled = true;
        
        try {
          const response = await fetch('https://formspree.io/f/mqedqerr', {
            method: 'POST',
            body: formData,
            headers: {
              'Accept': 'application/json'
            }
          });
          
          if (response.ok) {
            submitButton.textContent = 'Sent! Thank you.';
            showSuccessModal();
            form.reset();
            
            // Reset button after 3 seconds
            setTimeout(() => {
              submitButton.textContent = originalText;
              submitButton.disabled = false;
            }, 3000);
          } else {
            const data = await response.json();
            if (data.errors) {
              showErrorModal(data.errors.map((error) => error.message).join(', '));
            } else {
              throw new Error('Failed to submit form');
            }
            submitButton.textContent = originalText;
            submitButton.disabled = false;
          }
        } catch (error) {
          console.error('Error submitting form:', error);
          showErrorModal('There was an error submitting your form.');
          submitButton.textContent = originalText;
          submitButton.disabled = false;
        }
      });
    }
  });
</script>
