<section class="w-full py-[70px] md:py-[50px] md:pb-[104px] px-[7.3px] md:px-4 md:pr-9">
  <div class="max-w-[1388px] mx-auto flex flex-col gap-12">
    <!-- Header Row -->
    <div class="flex flex-col md:flex-row md:flex-wrap items-start md:justify-between px-5">
      <!-- Tree icon - above heading on mobile, beside on desktop -->
      <div class="pb-[25px] md:pb-7 md:order-last">
        <img src="/images/operating-model-tree.svg" alt="" class="w-12 h-6" />
      </div>
      <div class="w-full md:max-w-[704px]">
        <h2 class="font-funnel font-medium text-[29px] md:text-[38px] lg:text-[44.1px] leading-[32px] md:leading-[44px] lg:leading-[48px] tracking-[-0.64px] md:tracking-[-0.96px] gradient-heading">
          Operating model
        </h2>
      </div>
    </div>

    <!-- Content Area -->
    <div class="flex flex-col lg:flex-row items-start gap-8">
      <!-- Left Column -->
      <div class="flex-1 w-full">
        <!-- Description -->
        <div class="w-full lg:max-w-[587px] pb-[60px] md:pb-[150px]">
          <div class="px-5">
            <p class="font-inter-tight font-medium text-navy text-[18.6px] md:text-[18.9px] leading-[28.8px] md:leading-[30px]">
              QTree operates as a group holding company with centralized governance and decentralized execution.
            </p>
          </div>
        </div>

        <!-- Detail + HQ -->
        <div class="lg:max-w-[587px] px-5">
          <div class="flex flex-col gap-8 md:gap-10">
            <p class="font-inter-tight font-medium text-navy text-[13.5px] md:text-[13.3px] leading-[19.6px]">
              We maintain a long-term ownership mindset, supporting disciplined growth, operational clarity, and sustainable scale, without compromising the autonomy or focus of our operating companies.
            </p>

            <!-- Border + Building Image (mobile) + HQ Block -->
            <div class="border-t border-navy pt-[11px] md:pt-3.5 flex flex-col">
              <!-- Mobile building image -->
              <div class="lg:hidden w-full">
                <img src="/images/building.png" alt="Lusail Marina Tower-B" class="w-full h-[238px] object-cover" />
              </div>

              <!-- HQ Block -->
              <div class="flex flex-col items-end md:items-stretch pt-[14px] md:pt-0 md:justify-between md:h-[113px] overflow-hidden">
                <div class="md:pb-2.5">
                  <span class="font-inter-tight font-normal text-navy text-[14.9px] md:text-[18.6px] leading-[16px] md:leading-[20px] tracking-[1.6px] md:tracking-[2px] uppercase">
                    Our HQ
                  </span>
                </div>
                <div class="text-right">
                  <span class="font-inter-tight font-normal text-[30px] md:text-[56.6px] leading-[51px] md:leading-[64px] gradient-text-light">
                    Lusail Marina Tower-B
                  </span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Building Image (desktop only) -->
      <div class="hidden lg:block w-[611px] h-[458px] shrink-0">
        <img src="/images/building.png" alt="Lusail Marina Tower-B" class="w-full h-full object-cover" />
      </div>
    </div>
  </div>
</section>
