<section class="w-full pt-[70px] pb-[30px] md:py-[50px] px-[7.3px] md:px-4 md:pr-9">
  <div class="max-w-[1388px] mx-auto">
    <!-- Section Heading -->
    <div class="pb-5 max-w-[821px] px-5 mb-16 md:mb-6">
      <h2 class="font-funnel font-medium text-[29px] md:text-[38px] lg:text-[44.1px] leading-[32px] md:leading-[44px] lg:leading-[48px] tracking-[-0.64px] md:tracking-[-0.96px] gradient-heading">
        A long-term view on ownership
      </h2>
    </div>

    <!-- Content Row -->
    <div class="flex flex-wrap lg:flex-nowrap items-start justify-between gap-8">
      <!-- Venn Diagram Graphic -->
      <div class="w-full lg:max-w-[586px] pb-5 px-5 order-2 lg:order-1">
        <div class="relative h-[320px] flex items-center justify-center">
          <!-- Blur gradient background -->
          <div class="absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 w-[220px] h-[220px] lg:w-[328px] lg:h-[328px]">
            <div class="w-full h-full rounded-full bg-gradient-to-r from-[#8abfff] to-[#f99175] blur-[16px]"></div>
          </div>
          <!-- Left circle border -->
          <div class="absolute w-[230px] h-[230px] lg:w-[300px] lg:h-[300px] border border-navy rounded-full" style="left: calc(50% - 160px); top: 50%; transform: translateY(-50%);"></div>
          <!-- Right circle border -->
          <div class="absolute w-[230px] h-[230px] lg:w-[300px] lg:h-[300px] border border-navy rounded-full" style="left: calc(50% - 70px); top: 50%; transform: translateY(-50%);"></div>
        </div>
      </div>

      <!-- Text Content -->
      <div class="w-full lg:max-w-[704px] pb-10 px-5 order-1 lg:order-2">
        <div class="flex flex-col gap-[30px] font-inter-tight font-medium text-navy">
          <p class="text-[17px] md:text-[18px] lg:text-[19.2px] leading-[28px] md:leading-[29px] lg:leading-[30px]">
            We operate as a parent company with a long-term ownership mandate.
            We support independent operating businesses serving both public and private sector markets.
            Our role is to provide governance, capital discipline, and strategic clarity, while allowing management teams to lead day-to-day execution.
          </p>
          <p class="text-[17px] md:text-[18px] lg:text-[19.2px] leading-[28px] md:leading-[29px] lg:leading-[30px]">
            We prioritize quality over speed and structure over speculation.
          </p>
        </div>
      </div>
    </div>
  </div>
</section>
